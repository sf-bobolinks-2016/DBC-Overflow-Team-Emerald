<h1><%=@question.title%></h1>
<br>
<div>
  <%=@question.question%>
  <%= erb :"/comments/_question_comments" %>
  <a>add a comment</a>
</div>
<div class="answer-form">
  <form id ="answers" method="post" action="/answers">
    <textarea name="answer" rows="8" cols="40" placeholder="Your Answer"></textarea>
    <br />
    <input type="submit" value="submit answer">
    <input type="hidden" name="question_id" value="<%=@question.id%>">
  </form>
</div>
<br>
<div class="answer">
  <ul>
    <% @answers.each do |a|%>
    <li><%= a.answer %><br>
      <% @answer = a %>
      <b><u>*Author: <%= a.user.email %></u></b>
      <%= erb :"/comments/_answer_comments" %>
    </li>
    <% end %>
  </ul>
</div>
